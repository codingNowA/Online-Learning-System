{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",

                //c++17标准
                "/std:c++17",

                // 添加 include
                "/I", "C:\\Program Files\\MySQL\\mysql-connector-c++-9.3.0-winx64\\include",
                "/I", "C:\\Program Files\\MySQL\\mysql-connector-c++-9.3.0-winx64\\include\\jdbc",
                "/I","D:\\Downloads\\EnvironmentConfiguration\\vcpkg\\installed\\x64-windows\\include",

                "/Fo${workspaceFolder}/build/",
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "${file}",
                 // 链接 MySQL Connector/C++ 所需库
                "/link",
                "/INCREMENTAL:NO", // 禁止生成 .ilk 文件
                "/PDB:${workspaceFolder}/build/${fileBasenameNoExtension}.pdb", // 链接阶段指定 pdb 输出目录
                "/LIBPATH:C:\\Program Files\\MySQL\\mysql-connector-c++-9.3.0-winx64\\lib64\\vs14",
                "/LIBPATH:D:\\Downloads\\EnvironmentConfiguration\\vcpkg\\installed\\x64-windows\\lib",
                "mysqlcppconn.lib","fmt.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}